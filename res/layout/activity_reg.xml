<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/view_head"
            layout="@layout/public_head_reg" />

        <Button
            android:id="@+id/but_reg_login"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="登录" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_input_tips"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="填写手机号码："
            android:textColor="@color/black"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/et_reg"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/earning_gray"
            android:ems="10"
            android:hint="+86"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_reg_next"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/et_reg"
        android:layout_below="@id/et_reg"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn_login"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>
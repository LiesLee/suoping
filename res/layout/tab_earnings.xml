<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#EE1A19" >

        <TextView
            android:id="@+id/tv_yourEarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="13dp"
            android:text="你的当前收益"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/iv_rmb"
            android:layout_width="28dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/tv_yourEarning"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/icon_rmb" />

        <TextView
            android:id="@+id/tv_earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_rmb"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_rmb"
            android:text="5.44"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E4E4E4"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_todayEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="0.44"
                android:textColor="#000000"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="今天收益"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#A1A1A1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_allEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="5.44"
                android:textColor="#000000"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="累计收益"
                android:textColor="#6b6b6b" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_earnings_earnings"
            style="@style/earning_tab_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_inactive" />

                <TextView
                    style="@style/earning_tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待激活收益" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4" />

        <RelativeLayout
            android:id="@+id/rl_earnings_action"
            style="@style/earning_tab_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_newcomer_exercises" />

                <TextView
                    style="@style/earning_tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手活动" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_newcomer_exercises_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_newcomer_exercise_mark" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4" />

        <RelativeLayout
            android:id="@+id/rl_earnings_exchange"
            style="@style/earning_tab_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_shed_success" />

                <TextView
                    style="@style/earning_tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换成功" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_earnings_details"
                    style="@style/earning_tab_bg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_earning_detail" />

                        <TextView
                            style="@style/earning_tab_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收益明细" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E4E4E4" />

                <RelativeLayout
                    android:id="@+id/rl_earnings_announcement"
                    style="@style/earning_tab_bg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_announcement" />

                        <TextView
                            style="@style/earning_tab_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公告" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E4E4E4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <!--
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </RelativeLayout>
        -->
    </LinearLayout>

</LinearLayout>
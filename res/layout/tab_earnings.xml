<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
        android:background="#EE1A19"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <TextView
            android:id="@+id/tv_yourEarning"
            android:layout_margin="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:text="你的当前收益"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageView
            android:id="@+id/iv_rmb"
            android:layout_marginBottom="40dp"
            android:layout_alignLeft="@+id/tv_yourEarning"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_rmb"
            android:layout_width="28dp"
            android:layout_height="35dp"/>
        <TextView
            android:id="@+id/tv_earning"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-10dp"
            android:layout_alignBottom="@+id/iv_rmb"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/iv_rmb"
            android:text="5.44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tv_todayEarning"
                android:text="0.44"
                android:layout_margin="2dp"
                android:textSize="23sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="今天收益"
                android:layout_margin="2dp"
                android:textColor="#6b6b6b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:background="#A1A1A1"
            android:layout_width="1dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_allEarning"
                android:text="5.44"
                android:layout_margin="2dp"
                android:textSize="23sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="累计收益"
                android:layout_margin="2dp"
                android:textColor="#6b6b6b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <LinearLayout
                style="@style/earning_tab_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/icon_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/earning_tab_text"
                    android:text="待激活收益"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:background="#E4E4E4"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <LinearLayout
                style="@style/earning_tab_bg"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/icon_newcomer_exercises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/earning_tab_text"
                    android:text="新手活动"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_newcomer_exercises_mark"
                android:src="@drawable/icon_newcomer_exercise_mark"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:background="#E4E4E4"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <LinearLayout
                style="@style/earning_tab_bg"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/icon_earning_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/earning_tab_text"
                    android:text="收益明细"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        style="@style/earning_tab_bg"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/icon_shed_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            style="@style/earning_tab_text"
                            android:text="脱换成功"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:background="#E4E4E4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        style="@style/earning_tab_bg"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/icon_announcement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            style="@style/earning_tab_text"
                            android:text="公告"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:background="#E4E4E4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                </LinearLayout>
            <View
                android:background="#E4E4E4"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <View
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <!--<RelativeLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </RelativeLayout>-->
    </LinearLayout>
</LinearLayout>
